{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Hydrate Reminder",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "fyi.angelo.hydrate-reminder",
      "copyright": "GNU General Public License v3.0",
      "category": "HealthcareAndFitness",
      "shortDescription": "a smol tray app to remind you to drink",
      "icon": [
        "icons/desktop-icon.icns",
        "icons/desktop-icon.ico",
        "icons/desktop-icon.png"
      ]
    },
    "security": {
      "csp": null,
      "devCsp": null
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": []
  }
}